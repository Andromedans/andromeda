signature unit = {}

(* A short-hand for the print function. *)
let print = external "print"

(* Poor man's debugging mechanism. *)
mltype debug a = (!!) of a end
let debug x = print (!! x)

(* Top-level handlers default to failure. *)
handle
  | equal _ _ => None
  | as_prod _ => None
  | as_eq _ => None
  | as_signature _ => None
end

let (|>) x f = f x

operation failure : forall a b, a -> b

