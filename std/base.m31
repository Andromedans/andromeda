signature unit = {}

(* A short-hand for the print function. *)
let print = external "print"

(* Poor man's debugging mechanism. *)
data (!!) 1
let debug = fun x => print !! x

(* Top-level handlers default to failure. *)
handle
  | equal _ _ => None
  | as_prod _ => None
  | as_eq _ => None
  | as_signature _ => None
end

let (|>) = fun x f => f x
