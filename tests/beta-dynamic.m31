(* Test whether beta hints are dynamic. *)

constant A : Type
constant a : A
constant b : A

let f x = whnf x

do f a

do
  assume eq : a == b in
  now betas = add_beta eq in
    f a


operation gimme_beta 0

do
   handle
     let _ = gimme_beta in
     whnf a
   with
     | gimme_beta =>
       assume eq : a == b in
       now betas = add_beta eq in yield {}
   end

